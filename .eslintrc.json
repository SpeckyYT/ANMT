{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "script"
    },
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "MemberExpression": 0
            }
        ],
        "no-trailing-spaces":"error",
        "eol-last": [
            "error",
            "always"
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2,
                "maxBOF": 0,
                "maxEOF": 0
            }
        ],
        "no-inner-declarations": "off"
    }
}
